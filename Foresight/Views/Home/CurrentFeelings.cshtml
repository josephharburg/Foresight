
@{
    ViewData["Title"] = "CurrentFeelings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CurrentFeelings</h1>
<form asp-controller="Home" asp-action="AddCurrentFeelings">
    <div class="form-group">
        <label for="sleep">How many hours did you sleep did you get last night?</label>
        <select class="form-control" id="sleep" name="SleepHours" required>
            <option></option>
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
            <option>6</option>
            <option>7</option>
            <option>8</option>
            <option>9</option>
            <option>10</option>
        </select>
    </div>
    <div class="form-group">
        <label for="stress">How stressed do you feel right now? (1 = Not Stressed, 10 = Very Stressed)</label>
        <select class="form-control" id="stress" name="Stress" required>
            <option></option>
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
            <option>6</option>
            <option>7</option>
            <option>8</option>
            <option>9</option>
            <option>10</option>
        </select>
    </div>
    <div class="form-group">
        <label for="stress">What city in this list are you closest too?</label>
        <select class="form-control" id="stress" name="City" required>
            <option></option>
            <option>Ann Arbor</option>
            <option>Allen Park</option>
            <option>Bath</option>
            <option>Bay City</option>
            <option>Dearborn</option>
            <option>Dearborn Heights</option>
            <option>Detroit</option>
            <option>Dexter</option>
            <option>Flat Rock</option>
            <option>Flint</option>
            <option>Grand Rapids</option>
            <option>Kalamazoo</option>
            <option>Laingsburg</option>
            <option>Lexington</option>
            <option>Merritt</option>
            <option>Oxford</option>
            <option>Port Huron</option>
            <option>River Rouge</option>
            <option>Sterling Heights</option>
            <option>Tecumseh</option>
            <option>Unionville</option>
            <option>Walker</option>
            <option>Warren</option>
            <option>Waterford</option>
            <option>Wellston</option>
            <option>Ypsilanti</option>
        </select>
    </div>
    <div class="form-group">
        <label for="sick">Are you sick right now?</label>
        <input type="checkbox" class="form-control" id="sick" name="IsSick" value="true" />

    </div>
    <div class="form-group">
        <label for="hands">Have you been washing your hands regularly?</label>
        <input type="checkbox" class="form-control" id="hands" name="WashingHands" value="true" />

    </div>
    <div class="form-group">
        <label for="distance">Have you been keeping your distance from others?</label>
        <input type="checkbox" class="form-control" id="distance" name="Distance" value="true" />

    </div>
    <div class="form-group">
        <input class="form-control btn btn-primary" type="submit" />
    </div>

</form>
