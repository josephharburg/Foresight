@{
    ViewData["Title"] = "Home Page";
}
@model ViewInfo

<div class="text-center display-3 pb-3">Risk Level</div>

<div class="progress" style="height:10vh">
    <div class="progress-bar @Model.colorOfBar progress-bar-striped progress-bar-animated text-center" role="progressbar" style="width: @Model.percentage%" aria-valuenow="@Model.percentage" aria-valuemin="0" aria-valuemax="100"><h1>@Model.percentage%</h1></div>
</div>
<div class="container text-center pt-5">
    <img class="mainpagelogo" src="~/img/@Model.colorOfAnxiety" />
</div>
<div id="carouselExampleControls" class="carousel slide mb-5" data-ride="carousel" data-interval="false">
    <div class="carousel-inner pt-3">
        <div class="carousel-item active">
            <div class="speechbubble text-center text-white ">
                <h1>There is a @Model.percentage% chance of danger risk!</h1>
                <p class="lead">@Model.TempOutput</p>
            </div>
        </div>
        <div class="carousel-item">
            <div class="speechbubble text-center text-white">
                <h1>There is a @Model.percentage% chance of danger!</h1>
                <p class="lead">@Model.AqiOutput</p>


            </div>

        </div>
        <div class="carousel-item">
            <div class="speechbubble text-center text-white">
                <h1>There is a @Model.percentage% chance of danger!</h1>
                <p class="lead">@Model.Incliment</p>
            </div>
        </div>
        <div class="carousel-item">
            <div class="speechbubble text-center text-white">
                <h1>There is a @Model.percentage% chance of danger!</h1>
                <div>
                    <h3>Here is the latest news to be aware of:</h3>
                    @foreach (var item in Model.news)
                    {
                        <img class="img-thumbnail" src="@item.urlToImage" style="width:200px;" />
                        <h6>@item.title</h6>
                        <p class="lead">@item.description</p>
                        <a href="@item.url" class="lead text-white">Click Here for full article.</a>
                        <br />
                    }
                </div>
                <p class="lead">Powered by NewsAPI.org</p>
            </div>
        </div>
        }
    </div>
    <a class="carousel-control-prev pb-5" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next pb-5" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>